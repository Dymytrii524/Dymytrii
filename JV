    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html, body {
            width: 100%;
            height: 100%;
            overflow: hidden;
            font-family: Arial, sans-serif;
        }

        .container {
            width: 100%;
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .main-row {
            display: flex;
            flex: 1;
            min-height: 0;
        }

        .left-panel {
            width: 250px;
            background: #3498db;
            position: relative;
            transition: width 0.3s ease, margin-left 0.3s ease;
            overflow: hidden;
        }

        .left-panel.collapsed {
            width: 0;
            margin-left: 0;
        }

        .left-content {
            padding: 20px;
            color: white;
            white-space: nowrap;
        }

        .toggle-arrow {
            position: absolute;
            right: -30px;
            top: 50%;
            transform: translateY(-50%);
            width: 30px;
            height: 60px;
            background: #95a5a6;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 20px;
            user-select: none;
            transition: background 0.2s;
            z-index: 10;
        }

        .toggle-arrow:hover {
            background: #7f8c8d;
        }

        .right-container {
            flex: 1;
            display: flex;
            flex-direction: column;
            min-width: 0;
        }

        .top-panel {
            background: #e74c3c;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 24px;
            transition: height 0.1s;
            overflow: hidden;
        }

        .divider {
            height: 10px;
            background: #95a5a6;
            cursor: ns-resize;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 16px;
            user-select: none;
            position: relative;
        }

        .divider:hover {
            background: #7f8c8d;
        }

        .bottom-panel {
            background: #2ecc71;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
