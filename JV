<body>
    <div class="container">
        <div class="main-row">
            <div class="left-panel" id="leftPanel">
                <div class="left-content">
                    <h2>Лівий блок</h2>
                    <p>Цей блок можна приховати</p>
                </div>
                <div class="toggle-arrow" id="toggleArrow">◀</div>
            </div>
            
            <div class="right-container">
                <div class="top-panel" id="topPanel">
                    Верхній блок
                </div>
                
                <div class="divider" id="divider">
                    ☰
                </div>
                
                <div class="bottom-panel" id="bottomPanel">
                    Нижній блок
                </div>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function() {
            let isLeftCollapsed = false;

            $('#toggleArrow').on('click', function() {
                const $leftPanel = $('#leftPanel');
                const $arrow = $(this);
                
                if (isLeftCollapsed) {
                    $leftPanel.removeClass('collapsed');
                    $arrow.html('◀');
                } else {
                    $leftPanel.addClass('collapsed');
                    $arrow.html('▶');
                }
                
                isLeftCollapsed = !isLeftCollapsed;
            });

            let isDragging = false;
            let startY = 0;
            let startTopHeight = 0;
            let startBottomHeight = 0;
            const minHeight = 100;

            $('#divider').on('mousedown', function(e) {
                isDragging = true;
                startY = e.clientY;
                
                const containerHeight = $('.right-container').height();
                const dividerHeight = $(this).height();
                const topHeight = $('#topPanel').height();
                const bottomHeight = $('#bottomPanel').height();
                
                startTopHeight = topHeight;
                startBottomHeight = bottomHeight;
                
                $('body').css('user-select', 'none');
                e.preventDefault();
            });

            $(document).on('mousemove', function(e) {
                if (!isDragging) return;
                
                const deltaY = e.clientY - startY;
                const newTopHeight = startTopHeight + deltaY;
                const newBottomHeight = startBottomHeight - deltaY;
                
                if (newTopHeight >= minHeight && newBottomHeight >= minHeight) {
                    $('#topPanel').height(newTopHeight);
                    $('#bottomPanel').height(newBottomHeight);
                }
            });

            $(document).on('mouseup', function() {
                if (isDragging) {
                    isDragging = false;
                    $('body').css('user-select', '');
                }
            });

            function initializeHeights() {
                const containerHeight = $('.right-container').height();
                const dividerHeight = $('#divider').height();
                const availableHeight = containerHeight - dividerHeight;
                const halfHeight = availableHeight / 2;
                
                $('#topPanel').height(halfHeight);
                $('#bottomPanel').height(halfHeight);
            }

            initializeHeights();
            $(window).on('resize', initializeHeights);
        });
    </script>
</body>
</html>
