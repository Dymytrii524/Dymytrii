<body>
    <div class="container">
        <h1>Генератор випадкових рядків</h1>
        
        <div class="input-group">
            <label for="length">Довжина рядка:</label>
            <input type="number" id="length" min="1" max="1000" value="10">
        </div>

        <div class="input-group">
            <label>Використовувати символи:</label>
            <div class="checkbox-group">
                <div class="checkbox-item">
                    <input type="checkbox" id="useDigits" checked>
                    <label for="useDigits">Цифри (0-9)</label>
                </div>
                <div class="checkbox-item">
                    <input type="checkbox" id="useUppercase" checked>
                    <label for="useUppercase">Великі літери (A-Z)</label>
                </div>
                <div class="checkbox-item">
                    <input type="checkbox" id="useLowercase" checked>
                    <label for="useLowercase">Малі літери (a-z)</label>
                </div>
            </div>
        </div>

        <button class="btn-generate" id="generateBtn">Generate</button>
        <div class="error" id="error"></div>

        <div class="result-group">
            <label for="result">Згенерований рядок:</label>
            <input type="text" id="result" readonly>
        </div>
    </div>

    <script>
        $(document).ready(function() {
            $('#generateBtn').on('click', function() {
                const length = parseInt($('#length').val());
                const useDigits = $('#useDigits').is(':checked');
                const useUppercase = $('#useUppercase').is(':checked');
                const useLowercase = $('#useLowercase').is(':checked');

                $('#error').hide();

                if (!length || length < 1) {
                    $('#error').text('Будь ласка, вкажіть коректну довжину рядка').show();
                    return;
                }

                if (!useDigits && !useUppercase && !useLowercase) {
                    $('#error').text('Будь ласка, виберіть хоча б один тип символів').show();
                    return;
                }

                let chars = '';
                if (useDigits) chars += '0123456789';
                if (useUppercase) chars += 'ABCDEFGHIJKLMNOPQRSTUVWXYZ';
                if (useLowercase) chars += 'abcdefghijklmnopqrstuvwxyz';

                let result = '';
                for (let i = 0; i < length; i++) {
                    const randomIndex = Math.floor(Math.random() * chars.length);
                    result += chars[randomIndex];
                }

                $('#result').val(result);
            });

            $('#length, input[type="checkbox"]').on('keypress change', function(e) {
                if (e.type === 'keypress' && e.which === 13) {
                    $('#generateBtn').click();
                }
            });
        });
    </script>
</body>
